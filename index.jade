                            a.clearfix(href='https://twitter.com/haydenbleasel')
                                span.float-left Twitter
                                span.float-right @haydenbleasel
                        li
                            a.clearfix(href='https://github.com/haydenbleasel')
                                span.float-left GitHub
                                span.float-right @haydenbleasel
                        li
                            a.clearfix(href='https://dribbble.com/haydenbleasel')
                                span.float-left Dribbble
                                span.float-right @haydenbleasel
                        li
                            a.clearfix(href='https://www.npmjs.com/~haydenbleasel')
                                span.float-left NPM
                                span.float-right @haydenbleasel
                        li
                            a.clearfix(href='mailto:haydenbleasel+hydn@gmail.com')
                                span.float-left Email
                                span.float-right Send an email
                    
                    ul#projects
                        li.title Current projects
                        li
                            a.clearfix(href='https://sumry.in/')
                                span.float-left Sumry
                                span.float-right sumry.in
                        li
                            a.clearfix(href='http://theme.ink/')
                                span.float-left Theme Ink
                                span.float-right theme.ink

                    ul#sources
                        li.title Repositories
                    ul#forks
                        li.title Contributions
                    ul#modules
                        li.title Node Modules
